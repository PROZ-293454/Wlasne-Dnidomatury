<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hanas.dnidomatury">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".maturaListActivity.MaturaListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".selectActivity.SelectActivity"
            android:label="@string/select_activity_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".maturaActivity.MaturaActivity"
            android:theme="@style/AppTheme.NoActionBar.Matura" />
        <activity
            android:name=".maturaActivity.AddTaskActivity"
            android:label="@string/activity_add_task_name"
            android:theme="@style/AppTheme.UserDialog" />
        <activity
            android:name=".settingsActivity.SettingsActivity"
            android:label="Ustawienia powiadomień"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".selectActivity.AddMaturaActivity"
            android:label="Dodaj maturę ustną"
            android:theme="@style/AppTheme.UserDialog" />

        <service
            android:name=".settingsActivity.notification.NotifJobService"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE" />

    </application>

</manifest>