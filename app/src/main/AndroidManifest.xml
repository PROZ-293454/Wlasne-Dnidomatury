<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hanas.dnidomatury">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SelectActivity"
            android:label="@string/select_activity_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MaturaActivity"
            android:theme="@style/AppTheme.NoActionBar.Matura" />
        <activity
            android:name=".AddTaskActivity"
            android:label="@string/activity_add_task_name"
            android:theme="@style/AppTheme.UserDialog" />
    </application>

</manifest>